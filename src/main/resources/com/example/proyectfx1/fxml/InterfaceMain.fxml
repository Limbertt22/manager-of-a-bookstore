<VBox fx:id="body" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proyectfx1.SceneRootController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER" spacing="10">

